<?xml version='1.0' encoding='utf-8'?>
<widget id="com.spritebrush" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SpriteBrush</name>
    <description>
    Transform your smartphone or tablet into an enchanted light painting brush
    </description>
    <author email="spritepaint@gmail.com" href="http://www.spritebrush.com">
    Mat Bergman
    </author>
    <content src="index.html" />
    <icon src="icon.png" />
    <access origin="*" />
    <preference name="fullscreen" value="true" />
    <preference name="orientation" value="landscape" />
    <preference name="android-minSdkVersion" value="11" />
    <preference name="android-targetSdkVersion" value="19" />
</widget>
