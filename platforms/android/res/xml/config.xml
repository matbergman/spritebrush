<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.lightbrush" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="App">
        <param name="android-package" value="org.apache.cordova.App" />
    </feature>
    <name>SpriteBrush</name>
    <description>
    Transform your smartphone or tablet into an enchanted light painting brush
    </description>
    <author email="spritepaint@gmail.com" href="http://www.spritebrush.com">
        Mat Bergman
    </author>
    <preference name="Fullscreen" value="true" />
    <preference name="orientation" value="landscape" />
    <content src="index.html" />
    <access origin="*" />
</widget>
